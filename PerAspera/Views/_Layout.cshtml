			let cookieSettingsBtn = document.getElementsByClassName("ccc-notify-link")[0];
			if (cookieSettingsBtn) {
				cookieSettingsBtn.onclick = function() {
					let panelInfo = document.getElementById("ccc-info");
					let confirmButton = document.createElement("button");
					confirmButton.classList.add("btn-info");
					confirmButton.setAttribute("id", "confirm-btn");
					confirmButton.innerText = "Confirm Settings";
					panelInfo.appendChild(confirmButton);
				};
			}
		};
